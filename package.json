{
  "name": "gigglemap-api",
  "version": "1.0.0",
  "description": "GiggleMap Foundation mapping service",
  "main": "src/index.js",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "rm -rf dist && tsc",
    "dev": "ts-node-dev src/index.ts",
    "debug": "ts-node-dev --transpile-only --watch .env --ignore-watch node_modules --inspect=0.0.0.0:9229 --poll --respawn src/index.ts",
    "test": "jest",
    "lint": "eslint src",
    "typeorm": "typeorm-ts-node-commonjs -d ./src/utils/database.ts",
    "migration:generate": "npm run typeorm migration:generate ./src/migrations/$npm_config_name",
    "migration:run": "npm run typeorm migration:run"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "ioredis": "^5.6.1",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.24",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "ts-node-dev": "^2.0.0"
  }
}
